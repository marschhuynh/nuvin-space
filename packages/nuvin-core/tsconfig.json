{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": false
  },
  "include": [
    "index.ts",
    "**/*.ts"
  ],
  "exclude": [
    "dist/**/*",
    "tests/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules"
  ]
}