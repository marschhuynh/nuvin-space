{
	"name": "@nuvin/nuvin-cli",
	"version": "1.9.0",
	"private": false,
	"description": "Interactive AI coding assistant CLI powered by Nuvin core",
	"license": "Apache-2.0",
	"keywords": [
		"ai",
		"agent",
		"cli",
		"llm",
		"coding-assistant",
		"code-assistant",
		"developer-tools"
	],
	"author": "Marsch Huynh <marsch.huynh@gmail.com>",
	"repository": {
		"type": "git",
		"url": "https://github.com/marschhuynh/nuvin-cli.git",
		"directory": "packages/nuvin-cli"
	},
	"homepage": "https://github.com/marschhuynh/nuvin-cli#readme",
	"bugs": {
		"url": "https://github.com/marschhuynh/nuvin-cli/issues"
	},
	"bin": {
		"nuvin": "dist/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"build": "node scripts/build.js",
		"clean": "rm -rf dist",
		"dev": "tsup --watch",
		"run:dev": "npx tsx source/cli.tsx",
		"run:prod": "node dist/cli.js",
		"test": "vitest run",
		"lint": "pnpm exec biome lint",
		"format": "pnpm exec biome format --changed --no-errors-on-unmatched --write .",
		"prepack": "rm -rf dist && pnpm run build"
	},
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@nuvin/nuvin-core": "workspace:^",
		"ansi-escapes": "^7.2.0",
		"ansi-regex": "^6.2.2",
		"chalk": "^5.6.2",
		"cli-highlight": "^2.1.11",
		"cli-spinners": "^3.3.0",
		"cli-table3": "^0.6.5",
		"ink": "npm:@nuvin/ink@6.5.2",
		"ink-big-text": "^2.0.0",
		"ink-gradient": "^3.0.0",
		"ink-spinner": "^5.0.0",
		"marked": "^15.0.12",
		"meow": "^11.0.0",
		"node-emoji": "^2.2.0",
		"open": "^10.2.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"supports-hyperlinks": "^3.2.0",
		"type-fest": "^4.41.0",
		"yaml": "^2.8.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.5",
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/react": "^19.2.5",
		"@vdemedes/prettier-config": "^2.0.1",
		"@vitejs/plugin-react": "^5.1.1",
		"ava": "^5.3.1",
		"chalk": "^5.6.2",
		"delay": "^6.0.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^4.6.2",
		"ink-testing-library": "^3.0.0",
		"javascript-obfuscator": "^4.1.1",
		"prettier": "^2.8.8",
		"react-devtools-core": "^6.1.5",
		"sinon": "^21.0.0",
		"terser": "^5.44.1",
		"ts-node": "^10.9.2",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4"
	}
}