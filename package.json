{
  "name": "nuvin-space",
  "version": "0.0.0",
  "description": "Nuvin monorepo workspace",
  "private": true,
  "scripts": {
    "run:dev": "pnpm --filter @nuvin/nuvin-cli run:dev",
    "run:prod": "pnpm --filter @nuvin/nuvin-cli run:prod",
    "build": "pnpm --filter @nuvin/nuvin-core build && pnpm --filter @nuvin/nuvin-cli build",
    "build:core": "pnpm --filter @nuvin/nuvin-core build",
    "build:cli": "pnpm --filter @nuvin/nuvin-cli build",
    "clean": "pnpm --filter @nuvin/nuvin-core clean && pnpm --filter @nuvin/nuvin-cli clean",
    "dev": "pnpm --filter @nuvin/nuvin-cli dev",
    "lint": "pnpm --filter @nuvin/nuvin-cli lint",
    "format": "pnpm --filter @nuvin/* format",
    "test": "pnpm --filter @nuvin/nuvin-core test && pnpm --filter @nuvin/nuvin-cli test",
    "test:watch": "pnpm --filter @nuvin/nuvin-core test:watch",
    "prepare": "husky install",
    "changeset": "changeset",
    "version-packages": "changeset version && pnpm -w install --no-frozen-lockfile",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^24.10.1",
    "rimraf": "^6.1.2"
  },
  "dependencies": {
    "husky": "^9.1.7",
    "ink": "npm:@nuvin/ink@6.5.2"
  },
  "pnpm": {
    "overrides": {
      "ink": "npm:@nuvin/ink@6.5.2"
    }
  },
  "overrides": {
    "ink": "npm:@nuvin/ink@6.5.2"
  },
  "resolutions": {
    "ink": "npm:@nuvin/ink@6.5.2"
  }
}